{
    "functions": {
        "api/comics.js": {
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/api/comics",
            "destination": "/api/comics.js"
        },
        {
            "source": "/health",
            "destination": "/api/health.js"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}